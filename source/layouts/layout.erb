<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "The Middleman" %></title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <script src="https://fb.me/react-0.13.3.js"></script>

    <%= stylesheet_link_tag "normalize", "application" %>
  </head>

  <body class="<%= page_classes %>">
    <div class="container">
      <%= yield %>
    </div>
    <%= javascript_include_tag "https://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.8.3/underscore-min.js" %>
    <%= javascript_include_tag "https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.4/jquery.min.js" %>
    <%= javascript_include_tag "https://cdnjs.cloudflare.com/ajax/libs/backbone.js/1.2.1/backbone-min.js" %>
    <%= javascript_include_tag "https://fb.me/react-0.13.3.js" %>
    <%= javascript_include_tag "https://cdnjs.cloudflare.com/ajax/libs/backbone-react-component/0.8.1/backbone-react-component-min.js" %>
    <%= javascript_include_tag "application" %>
  </body>
</html>
